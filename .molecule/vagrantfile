Vagrant.configure('2') do |config|
  config.cache.scope = 'machine' if Vagrant.has_plugin?('vagrant-cachier')
    
  config.vm.provider 'virtualbox' do |vb|
    vb.cpus = 1
    vb.memory = 512
    vb.linked_clone = true if Vagrant::VERSION =~ /^1.8/
  end

    

    

  config.vm.define 'ansible-role-docker-jessie64' do |c|
    c.vm.hostname = 'ansible-role-docker-jessie64'
    
    c.vm.box = 'debian/jessie64'
    
  end
  config.vm.define 'ansible-role-docker-centos7' do |c|
    c.vm.hostname = 'ansible-role-docker-centos7'
    
    c.vm.box = 'centos/7'
    
  end
  
end